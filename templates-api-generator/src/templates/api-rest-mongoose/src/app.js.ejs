import express from 'express';
import dotenv from 'dotenv';
import dbClient from './config/dbclient.js';
import errorHandler from './middlewares/errorHandler.js';
<% resources.forEach(resource => { %>
import <%= resource.plural %>Routes from './routes/<%= resource.singular %>.routes.js';
<% }); %>

dotenv.config();

const app = express();

// Middlewares para parsear el cuerpo de las solicitudes.
app.use(express.json());
app.use(express.urlencoded({ extended: true }));

// Configuración de las rutas de la API.
<% resources.forEach(resource => { %>
app.use('/api/<%= resource.plural %>', <%= resource.plural %>Routes);
<% }); %>

// Middleware para manejar errores.
app.use(errorHandler);

// Puerto en el que se ejecutará el servidor.
const PORT = process.env.PORT || 3000;

// Inicia el servidor y se conecta a la base de datos.
app.listen(PORT, () => {
    console.log(`El servidor se está ejecutando en el puerto ${PORT}`);
    dbClient.connect();
});

